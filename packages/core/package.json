{
  "name": "masterchat",
  "description": "A JavaScript library for YouTube Live Chat.",
  "version": "0.4.4",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc -b src/tsconfig.cjs.json",
    "build:esm": "tsc -b src/tsconfig.esm.json",
    "clean": "shx rm -rf lib",
    "dev": "tsc -p src/tsconfig.cjs.json -w",
    "docs": "typedoc --out ../../docs --excludeExternals --excludePrivate --exclude '**/__tests__/*' src && shx touch ../../docs/.nojekyll",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "yarn build:cjs && DEBUG=masterchat jest"
  },
  "types": "./lib/cjs/index.d.ts",
  "main": "./lib/cjs/index.js",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "debug": "^4.3.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.11",
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "jest": "^27.0.5",
    "nock": "^13.1.1",
    "nock-record": "^0.3.9",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.3.4"
  },
  "homepage": "https://github.com/holodata/masterchat",
  "repository": {
    "type": "git",
    "url": "https://github.com/holodata/masterchat.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/holodata/masterchat/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "livechat",
    "masterchat",
    "youtube"
  ],
  "engines": {
    "node": ">= 12.18.3"
  }
}
