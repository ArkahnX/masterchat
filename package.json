{
  "name": "masterchat",
  "description": "JavaScript library for YouTube Live Chat",
  "version": "0.8.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc -b src/tsconfig.json",
    "build:esm": "tsc -b src/tsconfig.esm.json",
    "clean": "shx rm -rf lib",
    "dev": "tsc -p src/tsconfig.json -w",
    "docs": "typedoc --out ./docs --excludeExternals --excludePrivate --exclude '**/__tests__/*' src",
    "format": "pretty-quick --staged",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run build && cross-env DEBUG=masterchat jest"
  },
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "debug": "^4.3.2",
    "sha1": "^1.1.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.7.11",
    "@types/sha1": "^1.1.3",
    "cross-env": "^7.0.3",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "nock": "^13.1.3",
    "nock-record": "^0.3.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.9",
    "typescript": "^4.4.2"
  },
  "homepage": "https://github.com/holodata/masterchat",
  "repository": {
    "type": "git",
    "url": "https://github.com/holodata/masterchat.git"
  },
  "bugs": {
    "url": "https://github.com/holodata/masterchat/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "livechat",
    "masterchat",
    "youtube"
  ],
  "engines": {
    "node": ">= 14"
  }
}
