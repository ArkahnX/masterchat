{
  "exclude": ["**/__tests__"],
  "compilerOptions": {
    /* https://www.typescriptlang.org/docs/handbook/project-references.html */
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "../lib",
    "sourceRoot": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
