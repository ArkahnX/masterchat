{
  "name": "masterchat",
  "description": "A JavaScript library for YouTube Live Chat.",
  "version": "0.7.1",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc -b src/tsconfig.json",
    "build:esm": "tsc -b src/tsconfig.esm.json",
    "clean": "shx rm -rf lib",
    "dev": "tsc -p src/tsconfig.json -w",
    "docs": "typedoc --out ../../docs --excludeExternals --excludePrivate --exclude '**/__tests__/*' src && shx touch ../../docs/.nojekyll",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "yarn build && DEBUG=masterchat jest"
  },
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "debug": "^4.3.2",
    "sha1": "^1.1.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.6",
    "@types/jest": "^26.0.24",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.3.3",
    "@types/node-fetch": "^2.5.11",
    "@types/sha1": "^1.1.3",
    "jest": "^27.0.6",
    "nock": "^13.1.1",
    "nock-record": "^0.3.9",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "homepage": "https://github.com/holodata/masterchat",
  "repository": {
    "type": "git",
    "url": "https://github.com/holodata/masterchat.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/holodata/masterchat/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "livechat",
    "masterchat",
    "youtube"
  ],
  "engines": {
    "node": ">= 12.18.3"
  }
}
